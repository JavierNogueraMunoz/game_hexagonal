echo "        |   |   |   |   |   |      |   |         |         |           |  |    |   |   |   |   |       |       |"
echo "        |||||   |||||   |   |      |   |||||     |         |           ||||    |||||   |   |     |     |||||   |"
echo "        |       ||      |   |      |   |         |         |           |       |   |   |   |       |   |        "
echo -e "        |       |  |    |||||  |||||   |||||     |||||     |           |       |   |   |||||   |||||   |||||   |\n"
