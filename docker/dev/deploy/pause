#!/bin/bash

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd -P )"

echo -e "\n--------------------------------------- DOCKER STOP  -----------------------------------------------"                                                                                          \
    docker-compose -f "${SCRIPT_DIR}/docker-compose.yml" stop

